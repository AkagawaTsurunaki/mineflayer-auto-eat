{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "declaration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["ES2020"],
        "module": "commonjs",
        "outDir": "./dist",
        "skipLibCheck": true,
        "strict": true,
        "target": "ES2020"
    },
    "include": ["./src"]
}
